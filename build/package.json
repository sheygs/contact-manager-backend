{
    "name": "hux-assessment-backend",
    "version": "1.0.0",
    "description": "API service that allows users save contact information.",
    "main": "./build/src/index.js",
    "scripts": {
        "start": "node ./build/src/index.js",
        "dev": "nodemon --watch \"./src/**/*.ts\" --exec \"ts-node\" ./src/index.ts",
        "dev:local": "nodemon --exec \"yarn clean && yarn transpile && yarn start\" --watch src --ext ts",
        "clean": "rimraf build",
        "transpile": "tsc",
        "build:image": "docker build -t hux-api .",
        "run:image": "docker run -p 80:80 hux-api",
        "docker-compose": "docker-compose up -d postgres api",
        "prettify": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
        "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles",
        "test:watch": "cross-env NODE_ENV=test jest --runInBand --watch",
        "test:cov": "cross-env NODE_ENV=test jest --coverage"
    },
    "keywords": [
        "api",
        "hux"
    ],
    "repository": "https://github.com/sheygs/hux-assessment-backend.git",
    "author": "Olusegun Ekoh (sheygs)",
    "license": "MIT",
    "dependencies": {
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "helmet": "^7.1.0",
        "http-status": "^1.7.4",
        "joi": "^17.13.0",
        "morgan": "^1.10.0",
        "pg": "^8.11.5",
        "reflect-metadata": "^0.2.2",
        "typeorm": "^0.3.20",
        "winston": "^3.13.0"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.12.7",
        "@types/pg": "^8.11.5",
        "@types/supertest": "^6.0.2",
        "jest": "^29.7.0",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5"
    },
    "engines": {
        "node": ">= 20.0.0"
    }
}
