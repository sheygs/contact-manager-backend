{
  "name": "hux-assessment-backend",
  "version": "1.0.0",
  "description": "API service that allows users save contact information.",
  "main": "./build/index.ts",
  "scripts": {
    "start": "node ./build/index.js",
    "dev": "nodemon --watch \"./src/**/*.ts\" --exec \"ts-node\" ./src/index.ts",
    "clean": "rimraf build",
    "transpile": "tsc",
    "build:image": "docker build -t hux-api .",
    "run:image": "docker run -p 80:80 hux-api",
    "docker-compose": "docker-compose up -d postgres backend",
    "prettify": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "keywords": [
    "api",
    "hux"
  ],
  "repository": "https://github.com/sheygs/hux-assessment-backend.git",
  "author": "Olusegun Ekoh (sheygs)",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "joi": "^17.13.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.7",
    "@types/pg": "^8.11.5",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">= 20.0.0"
  }
}
