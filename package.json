{
  "name": "hux-assessment-backend",
  "version": "1.0.0",
  "description": "API service that allows users save contact information.",
  "main": "./build/src/index.js",
  "scripts": {
    "start": "node ./build/src/index.js",
    "dev": "nodemon --watch \"./src/**/*.ts\" --exec \"ts-node\" ./src/index.ts",
    "start:dev": "nodemon --exec \"yarn clean && yarn transpile && yarn start\" --watch src --ext ts",
    "clean": "rimraf build",
    "transpile": "tsc",
    "build:image": "docker build -t hux-api .",
    "run:image": "docker run -p 3001:3000 hux-api",
    "docker-compose": "docker-compose up -d postgres api",
    "view:logs": "docker-compose logs",
    "prettify": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --runInBand --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "typeorm:create-migration": "yarn typeorm -- migration:create ./migrations/$npm_config_name",
    "typeorm:run-migrations": "yarn typeorm migration:run -- -d ./src/db/data-source.ts",
    "typeorm:revert-migrations": "yarn typeorm migration:revert -- -d ./src/db/data-source.ts"
  },
  "keywords": [
    "api",
    "hux"
  ],
  "repository": "https://github.com/sheygs/hux-assessment-backend.git",
  "author": "Olusegun Ekoh (sheygs)",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "joi": "^17.13.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "randomstring": "^1.3.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.20",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.7",
    "@types/pg": "^8.11.5",
    "@types/randomstring": "^1.3.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">= 20.0.0"
  }
}
